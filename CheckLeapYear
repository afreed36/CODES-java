import java.util.*;
public class Test{
    public static boolean CheckLeapYear(int n){
        if(n%400==0)
            return true;
        else if(n%4==0) return true;
        return false;
    }
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        if( CheckLeapYear(n))
            System.out.println("YES "+n+" is a leapYear");
        else
            System.out.println("No "+n+" is not a leapYear");
    }
}
